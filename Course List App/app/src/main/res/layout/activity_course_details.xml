<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="15dp"
    android:layout_marginTop="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CourseDetailsActivity">

    <LinearLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/courseImage"

            android:src="@drawable/dac"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

</LinearLayout>

    <TextView

        android:id="@+id/textCourseId"
        android:textSize="18dp"
        android:text="courseId"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/textCourseName"
        android:textSize="18dp"
        android:text="courseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView

        android:id="@+id/textCourseDesc"
        android:textSize="18dp"
        android:text="courseDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/textCourseEligiblity"
        android:textSize="18dp"
        android:text="courseEligiblity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/textCourseFees"
        android:textSize="18dp"
        android:text="courseFees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>